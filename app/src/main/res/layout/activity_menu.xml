<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trouble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trabelstesh.javaproject.controller.MenuActivity">

    <Button
        android:text="Add Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addActivityButton"
        android:onClick="AddActivity"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/addBusinessButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="View all Businesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/ViewBusinessesButton"
        android:onClick="AllBusinesses"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/addActivityButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="View all Activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewActivitiesButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/ViewBusinessesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="AllActivities"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add Business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addBusinessButton"
        android:onClick="AddBusiness"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
